<section class="valign-wrapper">

<div class="container">
  <div class="row">
    <div class="col s12  m12 l12">
      
      <div class="card hoverable" style="background-color: rgba(255,255,255,.15);" id="card-login">

      <%= form_for @pqr do |f| %>

<div class="card-content grey lighten-4">
  <div class="center-align ">
     <span class="card-title">Nuevo PQR</span>
  </div>
  <br>
 <div class="row">
      <div class="field col s12 validate">
      <%= f.label :Usuario %><br/>
      <%= f.select "user_id", User.all.collect {|x| [x.username, x.id]},{}, class: "multiple"%>
      </div>

      <div class="field col s6 validate">
        <%= f.label :name_1 %><br/>
        <%= f.text_field :name_1, autofocus: true %>
      </div>
 </div> 
 <div class="row">
   <div class="input-field col s6 validate">
        <%= f.label :name_2 %><br/>
        <%= f.text_field :name_2, autofocus: true %>
      </div>

      <div class="input-field col s6 validate">
        <%= f.label :last_name_1 %><br/> 
        <%= f.text_field :last_name_1, autofocus: true %>
      </div>
 </div>
 <div class="row">

    <div class="input-field col s6">
      <%= f.label :last_name_2 %><br/>
      <%= f.text_field :last_name_2, autofocus: true, autocomplete: "last_name_2" %>
    </div>

    <div class="input-field col s6 ">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true %>
    </div>

 <div class="input-field col s6">
 <%= f.label :number %><br/>
 <%= f.text_field :number, autofocus: true %>  
</div>
<div class="input-field col s6">
 <%= f.label :date %><br/>
 <%= f.date_field :date, autofocus: true %> 
</div>

    <div class="input-field col s12 ">
       <%= f.label :description %><br/>
       <%= f.text_field :description, autofocus: true %>
    </div>
 </div>    
 <div class="field col s12 validate">
 <%= f.label :Estado %><br/>
 <%= f.select "state_id", State.all.collect {|x| [x.name, x.id]},{}, class: "multiple"%>
 </div>
    <div class="row">
      <div class="col s12">
        
      
      </div>
      </div>
    </div>
</div>

    <div class="actions card-action center-align ">
      <%= f.submit%>
    </div>
    
  <% end %>

          </div>
       </div>
    </div>
</div>
</section>