<section class="valign-wrapper">

<div class="container">
  <div class="row">
    <div class="col s12  m12 l12">
      
      <div class="card hoverable" style="background-color: rgba(255,255,255,.15);" id="card-login">

      <%= form_for @review do |f| %>

<div class="card-content grey lighten-4">
  <div class="center-align ">
     <span class="card-title">Revisar PQR</span>
  </div>
  <br>
 <div class="row">
      <div class="field col s12 validate">
      <%= f.label :Usuario %><br/>
      <%= f.select "user_id", User.all.collect {|x| [x.username, x.id]},{}, class: "multiple"%>
      </div>

      <div class="field col s12 validate">
        <%= f.label :Pqr %><br/>
        <%= f.select "pqr_id", Pqr.all.collect {|x| [x.description, x.id]},{}, class: "multiple"%>
      </div>
      
      <div class="field col s6 validate">
        <%= f.label :comment %><br/>
        <%= f.text_field :comment, autofocus: true %>
      </div>
 </div> 
 <div class="row">
   <div class="input-field col s6 validate">
        <%= f.label :date %><br/>
        <%= f.date_field :date, autofocus: true %>
      </div>

      <div class="input-field col s6 validate">
        <%= f.label :finished %><br/> 
        <%= f.text_field :finished, autofocus: true %>
      </div>
 </div>
 
      </div>
    </div>
</div>

    <div class="actions card-action center-align ">
      <%= f.submit %>
    </div>
    
  <% end %>

          </div>
       </div>
    </div>
</div>
</section>


